  Name="textBox2" Margin="41,175,0,0"
  MaxLength="64"
  PasswordChar="*"
  Grid.RowSpan="2" RenderTransformOrigin="0.839,0.739" Grid.Column="1" Grid.ColumnSpan="2" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="236"  
/>
        <Button x:Name="button" Content="Ok" Margin="0,225,65,0" VerticalAlignment="Top" Click="button_Click" Background="Azure" Grid.Row="1" Height="20" RenderTransformOrigin="0.154,0.25" HorizontalAlignment="Right" Width="130" Grid.ColumnSpan="2"/>
