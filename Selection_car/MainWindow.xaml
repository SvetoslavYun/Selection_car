                <GradientStop Color="#FFFBCE8D" Offset="0.392"/>
                <GradientStop Color="#FFFBC25D"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154*"/>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="128*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Margin="48,70,0,190" TextWrapping="Wrap" Text=" Имя пользователя" Grid.Row="1" RenderTransformOrigin="0.493,0.926" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Width="176" />
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="48,146,0,0" TextWrapping="Wrap" Text=" Пароль" VerticalAlignment="Top" Width="130" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="1" />
