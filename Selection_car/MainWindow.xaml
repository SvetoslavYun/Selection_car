        <ComboBox x:Name="textBox" 
            IsEditable="True" DropDownOpened ="comboBox_User_DropDownOpened"  Margin="41,96,0,0" HorizontalAlignment="Left" Width="237" Height="24" VerticalAlignment="Top" Grid.Column="1" FontFamily="Times New Roman" FontSize="14" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
    </Grid>
