<Window x:Class="Selection_car.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Selection_car"
        mc:Ignorable="d"
        Title="MainWindow" Height="225" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Button.Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Background="OldLace">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Button x:Name="btnFillUser" Click="btnFill_ClickUser" Content="Пользователи" Background="AntiqueWhite"/>
            <Button x:Name="btnFillCompani" Click="btnFill_ClickCompani" Content="Организация" Background="Wheat"/>
            <Button x:Name="btnFillCar" Click="btnFill_ClickCar" Content="Автотранспорт" Background="Silver"/>
            <Button x:Name="btnFillOrder" Click="btnFill_ClickOrder" Content="Заказ транспорта" Background="#FF6F87"/>
        </StackPanel>
    </Grid>
</Window>